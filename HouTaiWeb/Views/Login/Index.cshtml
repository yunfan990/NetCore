        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <i class="fa fa-warning"></i>
                </div>
                <div class="modal-title">Warning</div>

                <div class="modal-body">请输入手机号/邮箱/帐号</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>*@
    <!--Basic Scripts-->
    <script src="/js/jquery-2.0.3.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/form/jquery.unobtrusive-ajax.min.js"></script>
    <script src="/bootbox/bootbox.js"></script>
    <script src="/bootbox/alert.js"></script>
    <script>
        function Success(res) {
            if (res.success) {
                window.location.href = "@Url.Action("Index", "Home")";
            } else {
                user.autoAlert(res.errorMessage);
            }
        }
        function Begin() {
            if ($("#UserName").val().length < 1) {
                user.autoAlert("请输入用户名", false);
                return false;
            }
            if ($("#Password").val().length < 1) {
                user.autoAlert("请输入密码");
                return false;
            }
        }
        function Failure() {

        }
    </script>
</body>
<!--Body Ends-->
</html>
