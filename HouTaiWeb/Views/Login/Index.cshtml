@model BT.Model.ViewModel.Account.AccountLoginEntity
@{
    Layout = null;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<!--Head-->
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <meta name="description" content="login page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <!--Basic Styles-->
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/font-awesome.min.css" rel="stylesheet" />
    <!--Beyond styles-->
    <link href="/css/beyond.min.css" rel="stylesheet" />
    <link href="/css/demo.min.css" rel="stylesheet" />
    <link href="/css/animate.min.css" rel="stylesheet" />
    <link id="skin-link" href="" rel="stylesheet" type="text/css" />
    <!--Skin Script: Place this script in head to load scripts for skins and rtl support-->
    <script src="/js/skins.min.js"></script>

</head>
<!--Head Ends-->
<!--Body-->
<body>
    <form data-ajax-url="@Url.Action("UserLogin","Login")" data-ajax="true" data-ajax-mode="before" data-ajax-update="#form" data-ajax-success="Success" data-ajax-begin="Begin" data-ajax-method="post">
        @Html.AntiForgeryToken()
        <div class="login-container animated fadeInDown" id="form">
            <div class="loginbox bg-white">
                <div class="loginbox-title">SIGN IN</div>
                <div class="loginbox-textbox">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "手机号/邮箱/帐号" })
                </div>
                <div class="loginbox-textbox">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "密码" })
                </div>
                <div class="loginbox-forgot">
                    <a href="">忘记密码?</a>
                </div>
                <div class="loginbox-submit">
                    <input type="submit" class="btn btn-primary btn-block" value="登录">
                </div>
                <div class="loginbox-signup">
                    <a href="@Url.Action("UserRegister","Login")">没有帐号，立即注册 @ViewBag.taxs</a>
                </div>
            </div>
        </div>
    </form>
