                                <input type="text" class="form-control" placeholder="Year" />
                            </div>
                        </div>
                    </div>*@
                @*<div class="registerbox-textbox no-padding-bottom">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" class="colored-primary" checked="checked">
                                <span class="text darkgray">I agree to the Company <a class="themeprimary">Terms of Service</a> and Privacy Policy</span>
                            </label>
                        </div>
                    </div>*@
                <div class="registerbox-submit">
                    <input type="submit" class="btn btn-primary pull-right" value="注册为会员">
                </div>
            </div>
            <div class="logobox">
                <div class="registerbox-caption ">恭喜您，即将即将成为会员</div>
            </div>
        </div>
    </form>
    <script src="/js/jquery-2.0.3.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/form/jquery.unobtrusive-ajax.min.js"></script>
    <script src="/bootbox/bootbox.js"></script>
    <script src="/bootbox/alert.js"></script>
    <script>
        function Success(res) {
            user.autoAlert(res.errorMessage);
            if (res.success) {
                
            } else {
                user.autoAlert(res.errorMessage);
            }
        }
        function Begin() {
            if ($("#UserName").val().length < 1) {
                user.autoAlert("请输入帐号", false);
                return false;
            }
            if ($("#Password").val().length < 1) {
                user.autoAlert("请输入密码");
                return false;
            }
            if ($("#ConfirmPassword").val() != $("#Password").val()) { 
                user.autoAlert("两次输入密码不一致");
                return false;
            }
        }
        function Failure() {

        }
    </script>

</body>
<!--Body Ends-->
</html>
