@model BT.Model.ViewModel.Account.AccountRegisterEntity
@{
    ViewData["Title"] = "UserRegister";
}
<!DOCTYPE html>
<html>
<!--Head-->
<head>
    <meta charset="utf-8" />
    <title>注册会员</title>
    <meta name="description" content="register page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/font-awesome.min.css" rel="stylesheet" />
    <!--Beyond styles-->
    <link href="/css/beyond.min.css?v=1.0" rel="stylesheet" />
    <link href="/css/demo.min.css" rel="stylesheet" />
    <link href="/css/animate.min.css" rel="stylesheet" />
    <link id="skin-link" href="" rel="stylesheet" type="text/css" />
    <!--Skin Script: Place this script in head to load scripts for skins and rtl support-->
    <script src="/js/skins.min.js"></script>
</head>
<!--Head Ends-->
<!--Body-->
<body>
    <form data-ajax-url="@Url.Action("UserRegister","Login")" data-ajax="true" data-ajax-mode="before" data-ajax-update="#form" data-ajax-success="Success" data-ajax-begin="Begin" data-ajax-method="post">
        @Html.AntiForgeryToken()
        <div class="register-container animated fadeInDown">
            <div class="registerbox bg-white" style="height:300px;">
                <div class="registerbox-title">Register</div>

                <div class="registerbox-caption ">Please fill in your information</div>
                <div class="registerbox-textbox">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "手机号/邮箱/帐号" })
                </div>
                <div class="registerbox-textbox">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "密码" })
                </div>
                <div class="registerbox-textbox">
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "确认密码" })
                </div>
